{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "rootDir": "src",
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "noEmit": true,
    "declaration": false,
    "declarationDir": null,
    "outDir": "./lib",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
